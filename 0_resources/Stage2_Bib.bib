 pages = {3027-3043},
 source = {Scopus},
 title = {Antecedents and enablers of supply chain reconfigurability and their effects on performance},
 url = {https://www.scopus.com/inward/record.uri?eid=2-s2.0-85125390200&doi=10.1007%2fs00170-022-08851-8&partnerID=40&md5=d03e92b84dd0de2452bbdbaf7e0b2829},
