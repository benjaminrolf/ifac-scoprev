 author_keywords = {decoupling point relation;  fuzzy set theory;  multidimensional scaling;  multiple decoupling points;  multiple material decoupling point},
 document_type = {Article},
 doi = {10.1080/00207543.2011.588624},
 journal = {International Journal of Production Research},
